<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- MyMainTheme With HomeAsUpIndicator-->
    <style name="MyMainTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="homeAsUpIndicator">@drawable/new_menu_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/menu_indicator</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <!-- MyActionBar -->
    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">#009688</item>
    </style>
    
    <!-- MySecondTheme With No HomeAsUpIndicator -->
    <style name="MySecondTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
</resources>
